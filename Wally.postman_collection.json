                "exec": [
                  "// Parse JSON response\r",
                  "let jsonData;\r",
                  "\r",
                  "try {\r",
                  "    jsonData = pm.response.json();\r",
                  "} catch (e) {\r",
                  "    pm.test('Response is JSON', function () {\r",
                  "        pm.expect.fail('Response is not valid JSON');\r",
                  "    });\r",
                  "}\r",
                  "\r",
                  "// Basic check\r",
                  "pm.test('Token request succeeded', function () {\r",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 201]);\r",
                  "});\r",
                  "\r",
                  "// Save the access token to env variable \"token\"\r",
                  "if (jsonData && jsonData.token) {\r",
                  "    pm.environment.set('token', jsonData.token);\r",
                  "} else {\r",
                  "    console.warn('No token field found in response');\r",
                  "}"
